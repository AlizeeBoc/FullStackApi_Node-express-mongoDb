<h2 class = "page-header">Search player</h2>
<form action="/players" method = "GET">
    <label>Name</label>
    <input type="text" name = "name" value="<%= searchOptions.name %>" >
    <button type = "submit">Search</button>
</form>
<br>
<% players.forEach(player => { %>
    <div>
        <img src="<%= player.playerImg %>" alt="<%= player.name %>'s Profile Picture">
    </div>
    <div>Name : <%= player.name %></div>
    <div>Nationality : <%= player.nationality %></div>
    <div>Club : <%= player.club %></div>
    <div>OverallRating : <%= player.overallRating %></div>
        <div>
        <img src="<%= player.clubImg %>" alt="<%= player.club %>'s Club Picture" class="icone">
    </div>
<% }) %>

<div class="pagination">
    <% if (previousPage) { %>
        <form action="?page=<%= previousPage.page %>&limit=<%= previousPage.limit %>" method="GET">
            <button type="submit" class="btn btn-primary">Previous</button>
        </form>
    <% } %>
    <% if (nextPage) { %>
        <form action="?page=<%= nextPage.page %>&limit=<%= nextPage.limit %>" method="GET">
            <button type="submit" class="btn btn-primary">Next</button>
        </form>
    <% } %>
  </div>


